<div id="header">
    <div id="headerText">
        Free Plugins
    </div>
    <div id="headerMask">
    </div>
</div>

<style>
	#header{
        background-color: #070821;
        padding: 10px;
        height: 40px;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        align-items: center;   
        color: #ABADED;     
        overflow: hidden;
		font-family: Maven Pro;
        font-size:xx-large;
        font-weight: 700;
		text-align: center;
    }

    #headerMask{
        background: rgb(7,8,33);
        background: linear-gradient(90deg, rgba(7,8,33,0) 0%, rgba(7,8,33,1) 10%);
        min-width: 600px;        
        height: 60px;
        position: fixed;
        left: calc(50vw + 100px);
        top: 0;
        animation: 2s ease-in-out 0s 1 slideInFromLeft;
    }

    @keyframes slideInFromLeft {
    0% {
        transform: translateX(-300px);
    }
    100% {
        transform: translateX(300px);
    }
    }
</style>
